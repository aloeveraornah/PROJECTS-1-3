import random
wins = 0
def competition():
    users_strike = input("Type either 'r' for rock, 'p' for paper, 's' for scissors, 'l' for lizard or sp for Spock: ")
    computers_attack = random.choice(["r", "p", "s", "l", "sp"])
    if users_strike == computers_attack:
        return "EVEN TRADE!!! NO FUN!!!"
    if victory(users_strike, computers_attack):
        global wins
        wins = wins + 1
        return "YOU HAVE VANQUISHED THE DROID!!!"
    else:
        return "YOU LOST, HOW DOES IT FEEL!!!"

def victory(user, computer):
    if (user == "r" and computer == "s") or (user == "r" and computer =="l") \
    or (user == "p" and computer == "r") or (user == "p" and computer == "sp") \
    or (user == "s" and computer == "p") or (user == "s" and computer == "l") \
    or (user == "l" and computer == "sp") or (user == "l" and computer == "p") \
    or (user == "sp" and computer == "r") or (user == "sp" and computer == "s"):
        return True

while True:
    choose_game = input("Would you like to play Rock Paper Scissors Lizard Spock? Type 'p' to play or 'q' to quit: ")
    if choose_game == "p":
        print(competition())
    elif choose_game == "q":
        count = wins
        print(f"You have won {count} time(s) in total!")
        print("You are now quitting the game")
        quit()
    else:
        print("Invalid response, choose again!")
